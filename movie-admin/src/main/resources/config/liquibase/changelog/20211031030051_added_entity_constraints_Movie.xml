<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">
    <!--
        Added the constraints for entity Movie.
    -->
    <changeSet id="20211031030051-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="movie_id"
                                 baseTableName="rel_movie__category"
                                 constraintName="fk_rel_movie__category__movie_id"
                                 referencedColumnNames="id"
                                 referencedTableName="movie"/>

        <addForeignKeyConstraint baseColumnNames="category_id"
                                 baseTableName="rel_movie__category"
                                 constraintName="fk_rel_movie__category__category_id"
                                 referencedColumnNames="id"
                                 referencedTableName="category"/>

        <addForeignKeyConstraint baseColumnNames="movie_id"
                                 baseTableName="rel_movie__actor"
                                 constraintName="fk_rel_movie__actor__movie_id"
                                 referencedColumnNames="id"
                                 referencedTableName="movie"/>

        <addForeignKeyConstraint baseColumnNames="actor_id"
                                 baseTableName="rel_movie__actor"
                                 constraintName="fk_rel_movie__actor__actor_id"
                                 referencedColumnNames="id"
                                 referencedTableName="actor"/>

        <addForeignKeyConstraint baseColumnNames="session_id"
                                 baseTableName="movie"
                                 constraintName="fk_movie__session_id"
                                 referencedColumnNames="id"
                                 referencedTableName="session"/>
    </changeSet>
</databaseChangeLog>
